{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build-InferJS-Library",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-library/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config", "${workspaceFolder}/projects/inferjs-library/webpack.config.js"
            ],  
            "env" : { "NODE_ENV" : "production" }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build-InferJS-Compiler",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-compiler/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config", "${workspaceFolder}/projects/inferjs-compiler/webpack.config.js"
            ],  
            "env" : { "NODE_ENV" : "production" }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch-Test1",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tests/inferjs-library/test1.mjs",
            "args": [
                "--config='./configs/dev.json'",
                "--trace-warnings",
                "start"
            ],
            "preLaunchTask": "Build-Test1",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "InferCompiler-Launch-Test-Action-PARSE-FILE",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-compiler/src/main.mjs",
            "args": [
                "-f",
                "--input-file=./tests/inferjs-library/test1.mjs",
                "--output-file=./tests/inferjs-library/infers/test1.infer.mjs",
                "--output-file-options-flag=wx",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "InferCompiler-Launch-Test-Action-PARSE-DIR",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-compiler/src/main.mjs",
            "args": [
                "-d",
                "--input-dir=./tests/inferjs-library",
                "--input-dir-options-recursive=true",
                "--output-file=./tests/inferjs-library/infers/test1.infer.mjs",
                "--output-file-options-flag=wx",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "InferCompiler-Launch-Test-Action-PARSE-LIST",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-compiler/src/main.mjs",
            "args": [
                "-a",
                "--input-list='./tests/inferjs-library/test1.mjs','./tests/inferjs-library/test2.mjs'",
                "--output-file=./tests/inferjs-library/infers/test1.infer.mjs",
                "--output-file-options-flag=wx",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "InferCompiler-Launch-Test-Action-PARSE-FILE-LIST",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/projects/inferjs-compiler/src/main.mjs",
            "args": [
                "-l",
                "--input-file-list=./tests/inferjs-library/list.txt",
                "--output-file=./tests/inferjs-library/infers/test1.infer.mjs",
                "--output-file-options-flag=wx",
            ]
        }
    ]
}